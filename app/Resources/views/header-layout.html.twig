<!-- Navigation -->
<div class="bg-dark fixed-top">
    <div class="bg-dark header-bar ">
        <div class="row">
            <div class="col-3">

            </div>
            <div class="col-6 billeterie-logo">
                <a class="navbar-brand " href="{{ path('oc_louvre_homepage') }}">
                    <img src="{{ asset('lib/img/logo-louvre.jpg') }}" alt="Logo Louvre Paris"/>
                </a>
            </div>
            <div class="col-3" style="text-align: center;">
                <div class="billeterie-language">
                    {% set route = app.request.attributes.get('_route') %}
                    {% set route_params = app.request.attributes.get('_route_params') %}
                    {% set params = route_params|merge(app.request.query.all) %}
                    <div class="nav-item dropdown">
                        <a class="dropdown-toggle " href="#" id="navbarLanguage" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-globe" style="font-size:36px"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarLanguage">
                            <a class="dropdown-item" href="{{ path(route, params|merge({ _locale: "fr" })) }}">
                                <img src="{{  asset('lib/flags/blank.gif') }}" class="flag flag-fr"/> FR</a>
                            <a class="dropdown-item" href="{{ path(route, params|merge({ _locale: "en" })) }}">
                                <img src="{{  asset('lib/flags/blank.gif') }}" class="flag flag-us"/> USA</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


